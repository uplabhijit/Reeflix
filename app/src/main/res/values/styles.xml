<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/app_theme</item>
        <item name="colorPrimaryDark">@color/theme</item>
        <item name="colorAccent">@color/app_theme</item>
        <item name="colorControlNormal">@color/LightGrey</item>
        <item name="colorControlActivated">@color/appthemecolor</item>

    </style>

    <style name="HintText" parent="TextAppearance.Design.Hint">
        <!-- Floating label appearance here -->
        <item name="android:textColor">@color/appthemecolor</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.Design.TextInputLayout" parent="AppTheme">
        <item name="hintTextAppearance">@color/white</item>
        <item name="colorAccent">@color/appthemecolor</item>
        <item name="errorTextAppearance">@color/red</item>
        <item name="counterTextAppearance">@color/appthemecolor</item>
        <item name="counterOverflowTextAppearance">@color/appthemecolor</item>
        <!--</item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoActionAndStatusBar" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>
