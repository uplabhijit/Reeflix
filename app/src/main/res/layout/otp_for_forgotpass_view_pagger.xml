<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:progressDrawable="@drawable/circular_progress_bar"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="280dp">

        <TextView
            android:id="@+id/forgotText1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/otpverify_headertext"
            android:textColor="#6e6e6e"
            android:textSize="15sp" />


        <LinearLayout
            android:id="@+id/mainlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="70dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:layout_marginTop="60dp"
                android:orientation="vertical">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/otp_icon" />

                    <EditText
                        android:id="@+id/otpText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:background="#00154875"
                        android:fontFamily="sans-serif-light"
                        android:hint="@string/otp_text"
                        android:inputType="number"
                        android:imeOptions="actionDone"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:textColor="#6e6e6e"
                        android:textColorHint="#6e6e6e"
                        android:textSize="14sp"
                        android:textStyle="bold" />


                </LinearLayout>

                <ViewAnimator
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="#6e6e6e" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_verifyOtp"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_marginTop="45dp"
                android:background="@drawable/round_button"
                android:elevation="20dp"
                android:imeOptions="actionDone"
                android:onClick="verifyOtp"
                android:paddingLeft="28dp"
                android:paddingRight="28dp"
                android:shadowColor="@color/blue_300"
                android:text="@string/verifyotpbutton_text"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>